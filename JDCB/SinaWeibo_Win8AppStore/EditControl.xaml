<UserControl
    x:Class="SinaWeibo_Win8AppStore.EditControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SinaWeibo_Win8AppStore"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Height="300"
    Width="600"
    Loaded="UserControl_Loaded_1"
    d:DesignHeight="300"
    d:DesignWidth="600">

    <Grid Style="{StaticResource LayoutRootStyle}">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="150" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>
        <Button Grid.Row="0" HorizontalAlignment="Right" Content="X" Click="Button_Click_3" />
        <TextBlock Text="New Status" FontSize="20" VerticalAlignment="Center" Grid.Row="0" />
        <TextBox x:Name="InputArea" AcceptsReturn="True" Grid.Row="1" Margin="10"/>
        <StackPanel Orientation="Horizontal" Grid.Row="2">
            <Button Content="OK" Margin="10,0,0,0" Click="Button_Click_1" />
            <Button Content="Select Picture" Margin="10,0,0,0" Click="Button_Click_2" />
            <Image x:Name="imageUpload" Width="80" Height="80" Margin="20,0,0,0" Stretch="Uniform" />
        </StackPanel>      
    </Grid>
</UserControl>
